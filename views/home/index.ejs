<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Home Page</title>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<link rel="stylesheet" href="/resources/demos/style.css">
	<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script>
		$(function () {
			$("#menu").menu();
		});
	</script>
	<style>
		.ui-menu {
			width: 150px;
		}
	</style>
</head>

<body>
	<h1>Home Page</h1>
	<table>
		<tr>

			<td><a href="/register">Register</a></td>

			<td><a href="/login">Login</a></td>
			<td><a href="/home/movies">Movies</a></td>
			<td><a href="/home/webseries">Webseries</a></td>
		</tr>
		</table>
		<br><br><br>
		<fieldset>
		 <table>
			 
				 <legend>Request Box</legend>
		 	<form method="post">
               
				 <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
				 <%if(typeof req !="undefined"){%>
				 <%=req%>
				 <%}%>
		 		<tr>

		 			<td>Category:</td>
		 			<td>
		 				<select name="category" id="category">
		 					<option value="Movie">Movies</option>
		 					<option value="Webseries">Web Series</option>
		 					<option value="Drama">Drama</option>
		 					<option value="Song">Song</option>
		 				</select>
		 			</td>
		 		</tr>
		 		<tr>
		 			<td>Sub Category:</td>
		 			<td>
		 				<select name="subcategory" id="subcategory">
		 					<optgroup label="Movie">
		 						<option value="Action">Action</option>
		 						<option value="Adventure">Adventure</option>
		 					</optgroup>
		 					<optgroup id="B" label="Webseries">
		 						<option value="English">English</option>
		 						<option value="Bangla">Bangla</option>
		 					</optgroup>
		 					<optgroup id="B" label="Drama">
		 						<option value="English">English</option>
		 						<option value="Bangla">Bangla</option>
		 					</optgroup>
		 					<optgroup id="B" label="Song">
		 						<option value="Rock">Rock</option>
		 						<option value="Pop">Pop</option>
		 					</optgroup>
		 				</select>
		 			</td>
		 		</tr>


		 		<tr>
		 			<td>Name: </td>
		 			<td><input type="text" name="name" required=""></td>
		 		</tr>
		 		<tr>
		 			<td><input type="submit" name="" value="Request"></td>
		 			<td></td>
				 </tr>
				 
		 	</form>
		 </table>
		 </fieldset>
		 </table>
		 <script>
		 	$(document).ready(function () {
		 		var $optgroups = $('#subcategory > optgroup');

		 		$("#category").on("change", function () {
		 			var selectedVal = this.value;

		 			$('#subcategory').html($optgroups.filter('[label="' + selectedVal + '"]'));
		 		});
		 	});
		 </script>
	</table>
</body>

</html>